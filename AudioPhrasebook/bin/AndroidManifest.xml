<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.audiophrasebook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
        
    <instrumentation android:name="android.test.InstrumentationTestRunner"
    	android:targetPackage="com.example.audiophrasebook"
    	android:label="AudioPhrasebook" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="android.test.runner" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CategoryMenuActivity"
            android:label="@string/title_activity_category_menu" >
        </activity>
        <activity
            android:name=".GreetingPhrasesActivity"
            android:label="@string/title_activity_greeting_phrases" >
        </activity>
        <activity
            android:name=".DirectionPhrasesActivity"
            android:label="@string/title_activity_direction_phrases" >
        </activity>
        <activity
            android:name=".DiningoutPhrasesActivity"
            android:label="@string/title_activity_diningout_phrases" >
        </activity>
        <activity
            android:name=".ShoppingPhrasesActivity"
            android:label="@string/title_activity_shopping_phrases" >
        </activity>
        <activity
            android:name=".OptionsMenuActivity"
            android:label="@string/title_activity_options_menu" >
        </activity>
        
        
        
    </application>
    
    
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />    
  	<uses-permission android:name="android.permission.INTERNET"/>
    


</manifest>
